{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - GEN Market{% endblock %}

{% block body %}
    <div class="container-fluid bg-light">
        <div class="row">
            <div class="col-2 border bg-white" style="margin-left: 15px; height: 350px; margin-top: 80px">
                {{ form(form) }}
            </div>
            <div class="col-9">
                <div class="row">
                    <div class="col-12 mt-3" style="margin-left: 20px">
                        <h2>{{ category.name }} </h2>
                    </div>
                    {% for product in products %}
                        {{ include ('default/product/productCard.html.twig') }}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
