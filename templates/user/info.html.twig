{% extends 'base.html.twig' %}
{% block title %}Date personale{% endblock %}

{% block body %}
    {% if app.user.nickName > 0 %}
        <div class="container-fluid bg-light">
            <div class="container" style="height: 500px">
                <div class="row">
                    <div class="col-12 mt-3">
                        <h2>Profilul tau</h2>
                    </div>
                    <div class="col-12 mt-2">
                        <h4>Email</h4>
                        <p>{{ app.user }}</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 ">
                        <h4>Prenume</h4>
                        <p>{{ app.user.firstname }}</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <h4>Nume</h4>
                        <p>{{ app.user.lastname }}</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <h4>Nickname</h4>
                        <p>{{ app.user.nickName }}</p>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="container-fluid bg-light">
            <div class="container" style="height: 500px">
                <div class="row">
                    <div class="col-4 mt-3">
                        {{ form(userInfoForm) }}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
