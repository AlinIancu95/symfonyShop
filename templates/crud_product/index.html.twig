{% block title %}Product index{% endblock %}

{% block body %}

    <a href="{{ url('adminPanel') }}">< Back</a>
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Code</th>
                <th>Discount</th>
                <th>Weight</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>
                    <img width="40px" src="{{ asset('images/' ~ product.images.first) }}">
                </td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.code }}</td>
                <td>{{ product.discount }}</td>
                <td>{{ product.weight }}</td>
                <td>{{ product.type }}</td>
                <td>
                    <a href="{{ path('crud_product_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('crud_product_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('crud_product_new') }}">Create new</a>
{% endblock %}
